<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.arthacker.drawingappforkids.DrawingView
        android:id="@+id/canvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_paint_colors">

    </com.arthacker.drawingappforkids.DrawingView>



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ib_brush"
        android:id="@+id/ll_paint_colors"
        app:layout_constraintTop_toBottomOf="@id/canvas"
        android:orientation="horizontal">

    <ImageButton
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:background="@color/black"
        android:layout_margin="2dp"
        android:src="@drawable/pallet_normal"
        android:contentDescription="image"
        android:tag="@color/black"
        android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/white"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/white"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/purple"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/purple"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/blue"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/blue"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/sky"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/sky"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/green"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/green"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/light"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/light"
            android:onClick="paintClicked"/>


        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/lime"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/lime"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/yellow"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/yellow"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/dark_yellow"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/dark_yellow"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/red"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/red"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/pink"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/pink"
            android:onClick="paintClicked"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@color/grey"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:contentDescription="image"
            android:tag="@color/grey"
            android:onClick="paintClicked"/>


</LinearLayout>

    <ImageButton android:layout_height="50dp"
        android:layout_width="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp"
        android:id="@+id/ib_brush"
        android:src="@drawable/ic_brush"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"/>
</androidx.constraintlayout.widget.ConstraintLayout>